<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ad1_card"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ad1_image"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ad1_dream_league_2022" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ad1_card_2"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad1_card">

        <ImageView
            android:id="@+id/ad1_image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ad1_dream_league_2022" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/ad1_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Name 1"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ad1_card_2"
        app:layout_constraintTop_toBottomOf="@id/ad1_card" />

    <TextView
        android:id="@+id/ad1_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Description 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ad1_tv_name"
        app:layout_constraintTop_toBottomOf="@id/ad1_tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
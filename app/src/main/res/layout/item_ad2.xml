<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ad4_pubg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ad2_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Name 1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/ad2_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Description 1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ad2_tv_name"
        app:layout_constraintTop_toBottomOf="@id/ad2_tv_name" />

    <TextView
        android:id="@+id/ad2_tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:text="Add"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ad2_tv_name"
        app:layout_constraintTop_toBottomOf="@id/ad2_tv_description" />
</androidx.constraintlayout.widget.ConstraintLayout>